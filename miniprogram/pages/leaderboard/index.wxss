.bg {
  z-index: -1;
  width: 100%;
  height: 40vh;
  position: absolute;
  filter: blur(20rpx);
}
.list_of_rankings {
  width: 30vw;
  height: 100vh;
}
.list_of_rankings .left {
  height: 100%;
  background: #f3f3f3;
}
.list_of_rankings .left .title {
  background: white;
  text-align: center;
  font-size: 32rpx;
  padding: 30rpx 0;
  color: var(--themeColor);
}
.list_of_rankings .left .item {
  justify-content: center;
  align-items: center;
}
.list_of_rankings .left .item image {
  width: calc(20vw);
  height: calc(20vw);
  margin: 14rpx;
}
.alive {
  border-left: 4px solid rgba(0, 128, 255, 0.795);
  background: white;
}
.list_details {
  padding-top: 20rpx;
  width: calc(100vw - 20vw);
  height: 100vh;
}
.details_img {
  margin: 18rpx;
  width: 260rpx;
  height: 260rpx;
}
.details_name {
  margin: 10rpx 0;
  font-size: 36rpx;
}
.description {
  left: 210rpx;
  color: white;
  top: 10rpx;
  position: absolute;
  z-index: 10;
  margin: 20rpx;
  font-size: 32rpx;
}
.icons {
  justify-content: center;
  align-items: center;
  text-align: center;
}
.icons .icon {
  font-size: 50rpx;
}
.icons .text {
  font-size: 26rpx;
}
.play_all {
  align-items: center;
  justify-content: center;
  margin: 20rpx 30rpx;
  font-size: 34rpx;
  color: var(--musicName);
}
.play_all p {
  height: 100%;
  line-height: 100%;
  margin: 6rpx;
  font-size: 40rpx;
}
.song .item {
  align-items: center;
}
.song .item .tracks_index {
  margin: 20rpx;
  font-size: 34rpx;
}
.song .item .vertical .tracks_name {
  font-size: 34rpx;
  margin: 10rpx 10rpx;
}
